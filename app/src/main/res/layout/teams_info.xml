<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight=".70" >

    <!-- Includes gold and xp stats for the teams -->
    <include layout="@layout/divider_vertical_black" />
    <include layout="@layout/gold_stats" />
    <include layout="@layout/divider_vertical_black" />
    <include layout="@layout/xp_stats" />
    <include layout="@layout/divider_vertical_black" />


    <!-- Includes team logos, names, heroes -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <include layout="@layout/team_dire" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:minHeight="1px"
            android:layout_marginLeft="3dp"
            android:background="@color/match_list_divider" />

        <include layout="@layout/team_radiant" />

    </LinearLayout>

</LinearLayout>