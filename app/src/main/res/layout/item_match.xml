<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/radiantTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radiant Team"
                android:layout_weight=".75"/>

            <TextView
                android:id="@+id/radiantTeamKills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radiant Kills"
                android:layout_weight=".25"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/direTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dire Team"
                android:layout_weight=".75"/>

            <TextView
                android:id="@+id/direTeamKills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dire Kills"
                android:layout_weight=".25"/>
        </TableRow>

    </TableLayout>
</RelativeLayout>