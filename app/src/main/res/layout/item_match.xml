<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/tableLayout1"
        style="@style/match_item">

        <TableRow
            android:id="@+id/tableRowLeague"
            style="@style/league_info">

            <TextView
                android:id="@+id/leagueName"
                style="@style/league_name"
                android:text="The International" />

            <TextView
                android:id="@+id/isLive"
                style="@style/live_status"
                android:text="LIVE" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            style="@style/match_info">

            <LinearLayout style="@style/team_info">

                <ImageView style="@style/team_logo" />

                <TextView
                    android:id="@+id/radiantTeamName"
                    style="@style/team_name"
                    android:text="Radiant Team" />

            </LinearLayout>


            <TextView
                android:id="@+id/radiantTeamKills"
                style="@style/match_score"
                android:text="Radiant Kills" />

        </TableRow>

        <TableRow style="@style/divider"></TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            style="@style/match_info">

            <LinearLayout style="@style/team_info">

                <ImageView style="@style/team_logo" />

                <TextView
                    android:id="@+id/direTeamName"
                    style="@style/team_name"
                    android:text="Dire Team" />

            </LinearLayout>

            <TextView
                android:id="@+id/direTeamKills"
                style="@style/match_score"
                android:text="Dire Kills" />
        </TableRow>

    </TableLayout>
</RelativeLayout>